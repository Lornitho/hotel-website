{% extends 'base.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
    <!-- SLIDER -->
    <section class="fullscreen" id="vegas-slideshow">
        <div class="bg-overlay"></div>
        <div class="container-fullscreen">
            <div class="text-middle">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="text-light">
                                <h2 class="text-medium no-margin text-colored">Votre confort</h2>
                                <h2 class="text-lg no-margin">Notre priorité</h2>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div id="book">
                                <form method="post" action="#">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Check in</label>
                                                <div class="input-group">
                                                    <input name="fromDate" class="form-control" type="text">
                                                    <div class="input-group-append">
                                                        <span class="input-group-text" id="basic-addon2"><i class="fas fa-calendar"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Check out</label>
                                                <div class="input-group">
                                                    <input name="fromDate" class="form-control" type="text">
                                                    <div class="input-group-append">
                                                        <span class="input-group-text" id="basic-addon2"><i class="fas fa-calendar"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Room type</label>
                                                <select class="form-control" name="room_type" id="room_type">
                                                    <option value="">Select room type</option>

                                                    <option value="Single Room">Single Room</option>

                                                    <option value="Double Room">Double Room</option>

                                                    <option value="King double Room">King double Room</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <button class="btn btn-colored float-right">Vérifier les disponibilités</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- ROOMS -->
    <section>
        <div class="container">
            <div class="text-center m-b-40">
                <h2 class="text-medium m-t-0">Hotel Rooms</h2>
                <div class="seperator"><i class="fa fa-dot-circle-o"></i></div>
                <p class="lead">Hotel “POLO” is a peaceful and well-equipped holiday hotel. Thanks to the favourable situation close to the beach, the woods and the village centre, it is an ideal hotel, where you will certainly feel at home.</p>
            </div>
            <div class="row">
                {% for room in rooms  %}
                    <div class="col-lg-4">
                        <div class="room">
                            <div class="room-image">
                                <img src="homepages/hotel/images/rooms/4.jpg" alt="#">
                                <div class="room-title">{{ room.name }}</div>
                            </div>
                            <div class="room-details">
                                <p>{{ room.description }}</p>
                                <div class="float-left">
                                    <h4>{{ room.price }}$<small>/ Day</small></h4>
                                </div>
                                <div class="float-right">
                                    <a href="{{ path('room_detail',{'id':room.id}) }}" class="btn btn-colored">Detail</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </section>
    <!-- end: ROOMS -->


{% endblock %}
