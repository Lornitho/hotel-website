{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="fullscreen" data-bg-parallax="images/pages/1.jpg">
    <div class="container">
        <div>
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-lg-5 center p-50 background-white b-r-6">
                <h3>Inscription</h3>
                    {{ form_start(registrationForm) }}
                        <div class="form-group">
                            <label class="sr-only">Email</label>
                            {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder':'email'} }) }}
                        </div>
                        <div class="form-group">
                            <label class="sr-only">Prenom</label>
                            {{ form_widget(registrationForm.surname, { 'attr': {'class': 'form-control', 'placeholder':'prenom'} }) }}
                        </div>
                        <div class="form-group">
                            <label class="sr-only">Name</label>
                            {{ form_widget(registrationForm.name, { 'attr': {'class': 'form-control', 'placeholder':'nom'} }) }}
                        </div>
                        <div class="form-group">
                            <label class="sr-only">Mot de passe</label>
                            {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control', 'placeholder':'mot de passe'} }) }}
                        </div>
                        <div class="form-group form-inline text-left">
                            <div class="form-check">
                                <label>
                                    {{ form_widget(registrationForm.agreeTerms) }}<small class="m-l-10"> Accepter les conditions</small>
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn">S'inscrire</button>
                    {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
