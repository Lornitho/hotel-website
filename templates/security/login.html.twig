{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="fullscreen" data-bg-parallax="images/pages/1.jpg">
        <div class="container">
            <div>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="row">
                    <div class="col-lg-5 center p-50 background-white b-r-6">
                        <h3>Connexion</h3>
                        <form method="post">
                            <div class="form-group">
                                <label class="sr-only">Email</label>
                                <input type="email" name="email"  class="form-control" placeholder="Username or Email">
                            </div>
                            <div class="form-group m-b-5">
                                <label class="sr-only">Password</label>
                                <input type="password" name="password"  class="form-control" placeholder="Password">
                            </div>
                            <div class="form-group form-inline text-left">
                                <div class="form-check">
                                    <label>
                                        <input type="checkbox" name="_remember_me"><small class="m-l-10"> Se souvenir de moi</small>
                                    </label>
                                </div>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="text-left form-group">
                                <button type="submit" class="btn">Login</button>
                            </div>
                        </form>
                        <p class="small">Pas encore de compte? <a href="{{ path('app_register') }}">Inscription</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
